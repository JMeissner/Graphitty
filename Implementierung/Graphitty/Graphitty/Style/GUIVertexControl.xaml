<UserControl
    x:Class="GraphXImp.Resources.GUIVertexControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GraphXImp.Resources"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <Border
        x:Name="circularBorder"
        Width="{Binding Path=ActualHeight, ElementName=circularBorder}"
        Background="{Binding Color}"
        BorderBrush="Black"
        BorderThickness="2"
        CornerRadius="{Binding Path=ActualHeight, ElementName=circularBorder}"
        ToolTip="{Binding ToolTip}">
        <TextBlock
            Margin="10,15,10,15"
            Text="{Binding ID}"
            TextAlignment="Center" />
    </Border>
</UserControl>